<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.AddMedicineActivity"
    android:background="@drawable/addmedicine">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เพิ่มยา!!!"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:textSize="@dimen/heading1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="โปรดระบุตัวยา"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/heading3"
            android:layout_marginBottom="@dimen/z2_margin_smallgap" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_marginBottom="@dimen/z2_margin_space"
            android:hint="Trade name / Generic name" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter"
            android:id="@+id/buttonFilterListView" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_marginLeft="@dimen/z2_margin_smallgap"
            android:layout_marginRight="@dimen/z2_margin_smallgap" />
    </LinearLayout>
</RelativeLayout>
