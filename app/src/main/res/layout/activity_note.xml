<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.NoteActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="บันทึกประจำวัน"
        android:id="@+id/textView117"
        android:textSize="@dimen/heading3"
        android:gravity="center_vertical|center_horizontal"
        android:background="#8b2e8d"
        android:textColor="#ffffff"
        android:autoText="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/textView117"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView118" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/textView118"
        android:textSize="1sp"
        android:background="#fd3b3b"
        android:layout_margin="5dp"
        android:layout_above="@+id/linNoteFill" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linNoteButton"
        android:id="@+id/linNoteFill" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไม่ระบุเวลานัด"
            android:id="@+id/checkBox9"
            android:layout_marginLeft="@dimen/z2_margin_biggap" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:hint="ชื่อแพทย์ :"
            android:inputType="text"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_margin="@dimen/z2_margin_bigspace" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="วันนัด :"
                android:id="@+id/textView120"
                android:textSize="20sp"
                android:gravity="left|center" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="12/12/2016"
                android:id="@+id/textView121"
                android:textSize="20sp"
                android:textColor="#e78d4d"
                android:gravity="center_horizontal"
                android:background="@drawable/my_border_red" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginLeft="@dimen/z2_margin_bigspace"
            android:layout_marginRight="@dimen/z2_margin_bigspace"
            android:id="@+id/linearLayout12" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="เวลานัด :"
                android:id="@+id/textView122"
                android:textSize="20sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView123"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#c959d8"
                android:background="@drawable/my_border_orange" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เพิ่มวันนัด!!!"
            android:id="@+id/textView119"
            android:textColor="#b223a4"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/z2_margin_bigspace" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText7"
            android:hint="หมายเหตุ :"
            android:inputType="text"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linNoteButton"
        android:layout_alignParentBottom="true" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="กลับหน้ากลัก"
            android:id="@+id/button6"
            android:layout_alignParentBottom="true"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="บันทึก"
            android:id="@+id/button7"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
