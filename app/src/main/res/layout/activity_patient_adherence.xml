<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_adherence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.PatientAdherenceActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/exclamation_mark"
            android:id="@+id/imageView34"
            android:layout_weight="7"
            android:background="#b500b8" />

        <TextView
            android:text="      "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView134"
            android:layout_weight="7.9" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="ปฏิทินติดตามการกินยา"
            android:id="@+id/textView200"
            android:textSize="@dimen/heading3"
            android:gravity="center_vertical"
            android:background="#b500b8"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:paddingLeft="@dimen/z2_margin_smallgap" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">

        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/calendarView5"
            android:showWeekNumber="false" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text=" "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView188"
            android:layout_weight="1"
            android:background="@color/colorHeading"
            android:textSize="3sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView93"
        android:id="@+id/linCalendar"
        android:weightSum="1"
        android:layout_alignParentEnd="true"
        android:layout_weight="1.33"
        android:background="@color/colorBackground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.33"></LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewPatientAdherence"
            android:fadingEdge="none"
            android:background="@color/colorBackground"
            android:paddingBottom="@dimen/z2_margin_space"
            android:paddingLeft="@dimen/z2_margin_space"
            android:paddingRight="@dimen/z2_margin_space"
            android:paddingTop="@dimen/z2_margin_space" />

    </LinearLayout>

</LinearLayout>
