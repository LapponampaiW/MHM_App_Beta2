<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pop_up_change_appearance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.PopUpChangeAppearance">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9c2b9c"
        android:layout_gravity="center"
        android:id="@+id/linPUCAHeading">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="เปลี่ยนรูปเสมือนเม็ดยา"
            android:id="@+id/textView50"
            android:layout_weight="200"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linPUCAHeading"
        android:id="@+id/linPUCAStep"
        android:layout_above="@+id/linPUCAline2">

        <TextView
            android:text="ขั้นตอนที่ 1 : เลือกรูปแบบยา"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView205"
            android:layout_marginTop="@dimen/z2_margin_space" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z2_margin_bigspace"
            android:layout_marginLeft="@dimen/heading3"
            android:layout_marginRight="@dimen/heading3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_tablet1"
                    android:id="@+id/imageView18" />

                <TextView
                    android:text="ยาเม็ด"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView206"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_capsule1"
                    android:id="@+id/imageView19" />

                <TextView
                    android:text="ยาแคปซูล"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView207"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_water1"
                    android:id="@+id/imageView20" />

                <TextView
                    android:text="ยาน้ำ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView208"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linPUCAline1"
            android:layout_marginTop="@dimen/z2_margin_space"
            android:layout_marginBottom="@dimen/z2_margin_space"
            android:background="#30abc4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/textView38"
                android:textSize="1sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z2_margin_bigspace">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="NewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView209"
                    android:gravity="center_horizontal" />

                <ListView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/z2_margin_bigspace"
                    android:id="@+id/listViewTablet2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#30abc4">

                <TextView
                    android:text=" "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView204"
                    android:textSize="2sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView211"
                    android:gravity="center_horizontal" />

                <ListView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/z2_margin_bigspace"
                    android:id="@+id/listViewTablet3" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linPUCAline2"
        android:layout_marginTop="@dimen/z2_margin_space"
        android:layout_marginBottom="@dimen/z2_margin_space"
        android:background="#30abc4"
        android:layout_above="@+id/linPUCAResult">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textView210"
            android:textSize="1sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/linPUCAResult"
        android:layout_above="@+id/linPUCABottom"
        android:layout_height="80dp"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#9c2b9c"
        android:id="@+id/linPUCABottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="ยกเลิก"
            android:id="@+id/textView182"
            android:textColor="#ffffff"
            android:textSize="@dimen/heading3"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=" "
            android:id="@+id/textView183"
            android:background="#ffffff"
            android:layout_margin="@dimen/z2_margin_space"
            android:textSize="12sp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="ตกลง"
            android:id="@+id/textView184"
            android:textColor="#ffffff"
            android:textSize="@dimen/heading3"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>



</RelativeLayout>
