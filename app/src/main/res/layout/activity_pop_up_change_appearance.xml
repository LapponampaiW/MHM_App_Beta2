<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pop_up_change_appearance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.su.lapponampai_w.mhm_app_beta1.PopUpChangeAppearance">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9c2b9c"
        android:layout_gravity="center"
        android:id="@+id/linPUCAHeading">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="เปลี่ยนรูปเสมือนเม็ดยา"
            android:id="@+id/textView50"
            android:layout_weight="200"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linPUCAHeading"
        android:id="@+id/linPUCAStep"
        android:layout_above="@+id/linPUCAline2">

        <TextView
            android:text="ขั้นตอนที่ 1 : เลือกรูปแบบยา"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView205"
            android:layout_marginTop="@dimen/z2_margin_space"
            android:layout_marginLeft="@dimen/z2_margin_space" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z2_margin_bigspace"
            android:layout_marginLeft="@dimen/heading3"
            android:layout_marginRight="@dimen/heading3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_tablet1"
                    android:id="@+id/imageView18" />

                <TextView
                    android:text="ยาเม็ด"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView206"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_capsule1"
                    android:id="@+id/imageView19" />

                <TextView
                    android:text="ยาแคปซูล"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView207"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon_water1"
                    android:id="@+id/imageView20" />

                <TextView
                    android:text="ยาน้ำ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView208"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linPUCAline1"
            android:layout_marginTop="@dimen/z2_margin_space"
            android:layout_marginBottom="@dimen/z2_margin_space"
            android:background="#30abc4" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:id="@+id/textView38"
                android:textSize="1sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/z2_margin_bigspace">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="NewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView209"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:paddingTop="@dimen/z1_linearlayout_margin_top"
                        android:paddingBottom="@dimen/z1_linearlayout_margin_top">

                        <ImageView
                            app:srcCompat="@drawable/scroll_up_down"
                            android:id="@+id/imageView22"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/scroll_up_down"
                            android:id="@+id/imageView23"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/scroll_up_down"
                            android:id="@+id/imageView24"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/listViewTablet2"
                        android:layout_gravity="right"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#30abc4"
                android:id="@+id/linPUCACenter">

                <TextView
                    android:text=" "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView204"
                    android:textSize="2sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView211"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:paddingTop="@dimen/z1_linearlayout_margin_top"
                        android:paddingBottom="@dimen/z1_linearlayout_margin_top">
                        <ImageView
                            app:srcCompat="@drawable/scroll_up_down"
                            android:id="@+id/imageView25"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/scroll_up_down"
                            android:id="@+id/imageView26"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/scroll_up_down"
                            android:id="@+id/imageView27"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1" />



                    </LinearLayout>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:id="@+id/listViewTablet3"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linPUCAline2"
        android:layout_marginTop="@dimen/z2_margin_space"
        android:layout_marginBottom="@dimen/z2_margin_space"
        android:background="#30abc4"
        android:layout_above="@+id/linPUCAResult">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/textView210"
            android:textSize="1sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/linPUCAResult"
        android:layout_above="@+id/linPUCABottom"
        android:layout_height="80dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView215"
            android:layout_weight="5"
            android:layout_marginLeft="@dimen/z2_margin_space" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/img0104"
            android:id="@+id/imageView17"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#9c2b9c"
        android:id="@+id/linPUCABottom">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="ยกเลิก"
            android:id="@+id/textView212"
            android:textColor="#ffffff"
            android:textSize="@dimen/heading3"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=" "
            android:id="@+id/textView214"
            android:background="#ffffff"
            android:layout_margin="@dimen/z2_margin_space"
            android:textSize="12sp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="เปลี่ยนรูป"
            android:id="@+id/textView213"
            android:textColor="#ffffff"
            android:textSize="@dimen/heading3"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>



</RelativeLayout>
