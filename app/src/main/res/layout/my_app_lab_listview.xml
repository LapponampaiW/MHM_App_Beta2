<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="#b500b8"></LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView30"
                android:layout_weight="1"
                app:srcCompat="@drawable/test_tube" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="วันที่ตรวจ"
                    android:id="@+id/textView113"
                    android:paddingLeft="@dimen/z2_margin_smallgap"
                    android:paddingTop="@dimen/z2_margin_space"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="เวลาตรวจ"
                    android:id="@+id/textView114"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/z2_margin_smallgap"
                    android:paddingRight="@dimen/z2_margin_space" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ค่าLab ที่ตรวจ"
                android:id="@+id/textView112"
                android:paddingTop="@dimen/z2_margin_space"
                android:paddingLeft="@dimen/z2_margin_smallgap"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NoteAppointment"
                android:id="@+id/textView115"
                android:paddingLeft="@dimen/z2_margin_smallgap"
                android:paddingTop="@dimen/z2_margin_space" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:id="@+id/textView116"
        android:textSize="1sp"
        android:background="#7d7d7d"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/z2_margin_bigspace"
        android:layout_marginRight="@dimen/z2_margin_bigspace" />

</LinearLayout>