<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bglistview">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="187dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trade Name"
            android:id="@+id/textViewTradename"
            android:layout_marginTop="@dimen/z2_margin_smallgap"
            android:textSize="@dimen/heading3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generic Name 1/2"
            android:id="@+id/textViewGname12"
            android:layout_marginTop="@dimen/z2_margin_space" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generic Name 3/4"
            android:id="@+id/textViewGname34"
            android:layout_marginTop="@dimen/z2_margin_space" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/z1_linearlayout_icon"
        android:layout_height="@dimen/z1_linearlayout_icon"
        android:id="@+id/imageViewicon"
        android:layout_margin="@dimen/z2_margin_space" />

</LinearLayout>